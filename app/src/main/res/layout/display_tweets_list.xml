<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DisplayTweetsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mongrels.clusterthosetweets.DisplayTweetsActivity">

    <android.support.design.widget.TweetsList
        android:id="@+id/tweets_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal"
            />
    </android.support.design.widget.TweetsList>

</android.support.v4.widget.DisplayTweetsLayout>